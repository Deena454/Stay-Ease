<% layout("layouts/boilerplate.ejs")%>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <h2>Edit the Listing</h2>
      <form
        method="post"
        action="/listings/<%=listing._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div mb->
          <label for="title" class="form-label">Title</label>
          <input
            placeholder="Enter the title"
            value="<%=listing.title%>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title look's good</div>
          <div class="invalid-feedback">Tittle should be valid</div>
        </div>
        <br />

        <div>
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
<%=listing.description%>
          </textarea>
          <div class="invalid-feedback">Please give short description</div>
        </div>
        <br />
        <div class="mb-3">
          <p>Orginal Listing Image</p>
          <img class="img" src="<%=orginalImageUrl%>" />
        </div>
        <div>
          <label for="image" class="form-label">Upload Image</label>
          <input name="listing[image]" type="file" class="form-control" />
        </div>
        <br />

        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input
              value="<%=listing.price%>"
              name="listing[price]"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          <br />

          <div class="mb-3 col-8">
            <label for="location" class="form-label">Location</label>
            <input
              value="<%=listing.location%>"
              name="listing[location]"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Location should be valid</div>
          </div>
        </div>

        <div>
          <label for="country" class="form-label">Country</label>
          <input
            value="<%=listing.country%>"
            name="listing[country]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
        <br />
        <button class="btn btn-dark edit-btn">Edit!</button>
      </form>
    </body>
  </div>
</div>
