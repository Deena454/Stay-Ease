<% layout("layouts/boilerplate.ejs") %>
<div class="row">
  <div class="col-8 offset-2">
    <body>
      <br />
      <h2>Create new Listing</h2>
      <br />
      <form
        method="post"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            placeholder="Enter the title"
            name="listing[title]"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title look's good</div>
          <div class="invalid-feedback">Tittle should be valid</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            placeholder="Give Description "
            name="listing[description]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please give short description</div>
        </div>

        <!-- <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input
            placeholder="Enter the image url"
            name="listing[image]"
            type="text"
            class="form-control"
          />
        </div> -->

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input name="listing[image]" type="file" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-4">
            <label for="price" class="form-label">Price</label>
            <input
              placeholder="Enter the price"
              name="listing[price]"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-3 col-8">
            <label for="location" class="form-label">Location</label>
            <input
              placeholder="Enter the location"
              name="listing[location]"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Location should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            placeholder="Enter the country"
            name="listing[country]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
        <br />
        <button class="btn btn-dark add-btn">ADD</button>
      </form>
    </body>
  </div>
</div>
<br />
